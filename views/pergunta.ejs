<%- include ('partials/header.ejs'); %>
<body>
    <%- include ('partials/navbar.ejs'); %>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="POST" action="/responder">
            <h3>Responda</h3><br>
            <textarea placeholder="Digite sua resposta" class="form-control" name="corpo"></textarea><br><br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-dark">Responder</button>
        </form>
        <br>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta =>{%>
            <br>
            <div class="card">
                <div class="card-body" id="card-resposta">
                    <h6><%= resposta.corpo%></h6>
                </div>
            </div>

        <% }) %>
    </div>
</body>
<%- include ('partials/footer.ejs'); %>